<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Adding a profile">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label text="Select the version type:">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="typeCB" prefWidth="300.0" />
      <Label text="Select the version:">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="versionCB" prefWidth="300.0" />
      <Label text="Profile name:">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="profileNameTf" />
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="cancelBt" onAction="#cancel" mnemonicParsing="false" text="Cancel" HBox.hgrow="ALWAYS" />
            <Button fx:id="saveBt" onAction="#addProfile" disable="true" mnemonicParsing="false" text="Add" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
