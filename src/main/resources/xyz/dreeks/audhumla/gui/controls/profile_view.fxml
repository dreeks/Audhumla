<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<fx:root type="VBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Name:">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TextField fx:id="nameField" prefWidth="150.0" />
      <Label text="Install folder:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="installLocationLabel" text="None">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </Label>
      <Label text="Minecraft base version:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="mcVersionLabel" text="None">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </Label>
      <Pane VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="deleteButton" onAction="#deleteProfile" mnemonicParsing="false" text="Remove profile">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="saveButton" onAction="#saveProfile" mnemonicParsing="false" text="Save" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</fx:root>
